{{- writeToStdout "Skip by press enter without data \n" -}}
{{- writeToStdout "Git Config... \n" -}}
{{- /* prompStringOnce . "dataPath" "displayString" */ -}}
{{ $email := promptStringOnce . "git.email" "What is your email address" -}}
{{ $name := promptStringOnce . "git.name" "What is your name" -}}

[data.git]
    email = {{ $email | quote }}
    name = {{ $name | quote }}

{{- $bitwarden_enabled := promptStringOnce . "bitwarden.enabled" "Enable bitwarden vault (y/n)" "n" }}
{{- writeToStdout "Bitwarden data Config... \n" }}
[data.bitwarden]
    enabled = {{ $bitwarden_enabled | quote -}}
{{ if eq "y" $bitwarden_enabled }}
    config_hosts= {{ (promptStringOnce . "bitwarden.config_hosts" "bitwarden config_hosts secure note name" "dotfiles/.ssh/config_hosts") | quote }}
    putty_ssh= {{ (promptStringOnce . "bitwarden.putty_ssh" "bitwarden putty ssh keys attachment item name" "putty-ssh") | quote }}
{{ else }}
    config_hosts=""
    putty_ssh=""
{{ end -}}

[diff]
    pager = "diff-so-fancy"

{{- writeToStdout "-------------------------------------------------\n" -}}
{{- writeToStdout "Want to ReEnter data?\nForce prompt*Once template functions to prompt\n" -}}
{{- writeToStdout "$ cz init --prompt\n" -}}
