{{- writeToStdout "Git Config \n" -}}
{{ $email := promptStringOnce . "email" "What is your email address" -}}
{{ $name := promptStringOnce . "name" "What is your name" -}}

[data.git]
    email = {{ $email | quote }}
    name = {{ $name | quote }}
    work_email = {{ $email | quote }}
    work_name = {{ $name | quote }}

[diff]
    pager = "diff-so-fancy"
